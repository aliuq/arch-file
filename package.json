{
  "name": "suzip",
  "version": "0.1.2",
  "description": "archive file package",
  "keywords": [
    "suzip",
    "archive",
    "archiver",
    "zip",
    "gzip"
  ],
  "license": "MIT",
  "author": "liuq",
  "repository": "https://github.com/aliuq/suzip.git",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "locales",
    "dist",
    "bin",
    "*.d.ts"
  ],
  "bin": {
    "suzip": "./bin/suzip.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "esno src/index.ts",
    "dev:cli": "esno src/cli/index.ts",
    "build": "unbuild",
    "lint": "eslint .",
    "test": "node bin/suzip.js -h",
    "prepublishOnly": "npm run build",
    "release": "npx bumpp --push --tag --commit"
  },
  "dependencies": {
    "@aliuq/eslint-config": "^0.0.3",
    "archiver": "^5.1.0",
    "byte-size": "^7.0.0",
    "find-up": "^6.3.0",
    "fs-extra": "^9.0.1",
    "kolorist": "^1.5.1",
    "lodash": "^4.17.20",
    "y18n": "^5.0.8",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/lodash-es": "^4.17.6",
    "@types/yargs": "^17.0.10",
    "eslint": "^8.14.0",
    "esno": "^0.14.1",
    "unbuild": "^0.7.4"
  },
  "bugs": "https://github.com/aliuq/suzip/issues",
  "homepage": "https://github.com/aliuq/suzip",
  "engines": {
    "node": ">=14.0.0"
  }
}
